<div class="author">
  <h1 class="author__heading">Juadeb Gabriel</h1>
  <p class="author__body">Web Developer & Mentor</p>
</div>

<img
  src="/images/developer(1).jpg"
  alt="juadeb a web developer"
  class="hero-image"
  width="981"
  height="528"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Post</h2>
  <ul class="article-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %> ">
        <span> <%= post.title %> </span>
        <span class="article-list_date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }); %>
  </ul>
  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage  %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
